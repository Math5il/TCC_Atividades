#include <stdio.h>
int sucessor(int n) {
    return n + 1;
}
int soma(int m, int n) {
    if (n == 0) {
        return m;
    } else {
        return soma(m, sucessor(n));
    }
}
int main() {
    int m, n;
    printf("Informe um número: ");
    scanf("%d", &m);
    printf("Informe outro número para ser somado: ");
    scanf("%d", &n);
    printf("A soma é igual a: %d\n", m + n);
    return 0;
}
